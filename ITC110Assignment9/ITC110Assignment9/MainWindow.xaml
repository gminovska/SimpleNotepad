        <TextBox x:Name="textBoxOne" HorizontalAlignment="Left" Height="302" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="270" AcceptsReturn="True" AcceptsTab="True"/>
